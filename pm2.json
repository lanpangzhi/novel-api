{
    "name": "novel-api", 
    "script": "./bin/www", 
    "cwd": "./", 
    "watch": [ 
        "bin",
        "routers"
    ],
    "ignore_watch": [ 
        "node_modules",
        "logs",
        "public"
    ],
    "watch_options": {
        "followSymlinks": false
    },
    "max_memory_restart": "1G",
    "error_file": "./logs/novel-apierr.log", 
    "out_file": "./logs/novel-api-out.log",
    "env": {
        "DEBUG": "novel-api",
        "PORT": "8080"
    }
}